@model Gilligan.MVC.ViewModels.Music.AlbumViewModel

@{
    ViewBag.Title = "AlbumView";
}

<h2>Album</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <h5>@Html.DisplayFor(model => model.Artist)</h5>
    <h6>@Html.DisplayFor(model => model.Genre)</h6>
    <hr />
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Rating
            </th>
        </tr>
        @foreach (var song in Model.SongViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => song.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => song.Rating)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = song.SongId }) |
                    @Html.ActionLink("Details", "Details", new { id = song.SongId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = song.SongId })
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>