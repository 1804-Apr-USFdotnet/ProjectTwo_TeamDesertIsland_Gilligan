@model Gilligan.MVC.ViewModels.Music.SongRatingsViewModel

@{
    ViewBag.Title = "SongRatings";
}

<h2>SongRatings</h2>

<div>
    <h4>SongRatingViewModel</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>

<div>
    <table class="table">
        <tr>
            <th>
                Top All Time Songs
            </th>
            <th>
                Artist
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.TopAllTimeRatedSongViewModels)
